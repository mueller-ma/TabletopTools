<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.BuzzersFragment">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buzzer_a"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:rotation="180"
            android:text="@string/buzzers_player_a"
            android:layout_weight="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@id/buzzer_b"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toStartOf="@id/buzzer_c"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            android:layout_marginEnd="16dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buzzer_c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:rotation="180"
            android:text="@string/buzzers_player_c"
            android:layout_weight="0.5"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@id/buzzer_a"
            app:layout_constraintStart_toEndOf="@id/buzzer_a"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:visibility="visible" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buzzer_b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:text="@string/buzzers_player_b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/buzzer_d"
            app:layout_constraintTop_toBottomOf="@id/buzzer_a"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buzzer_d"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/buzzers_player_d"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/buzzer_b"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/buzzer_b"
            android:layout_marginBottom="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>